<script>
    function OnFailure(e) {
        console.log(e);
        AppNotification.error(e);
        $('form :input').prop('disabled', false);
    }

    function OnBegin(e) {
        $('form :input').prop('disabled', true);
    }

    $('form').attr('data-ajax-begin', 'OnBegin');
    $('form').attr('data-ajax-failure', 'OnFailure');
    $('form').attr('data-ajax', true);
    $('form').attr('data-ajax-method', 'POST');
</script>

<script> $('form').attr('data-ajax', true);</script>
