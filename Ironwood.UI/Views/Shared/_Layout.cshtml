<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ironwood.UI</title>    
    <link rel="icon" type="image/png" sizes="159x159" href="~/img/logo/skybetlogo.png">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    @{
        string IsCurrentPage(string page)
        {
            return Context.Request.Path == page ? "active" : "";
        }
    }
    <nav class="navbar navbar-expand-sm navbar-light bg-dark" style="height: auto; ">

        <a href="/" class="navbar-brand ml-lg-5" style="color: white; font-size: 30px;"><img src="~/img/logo/skybetlogo.png" style="height: 50px; margin-bottom: 6px;margin-right: 9px;"></a>
        <button class="navbar-toggler btn-light " type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse text-uppercase" id="navbarSupportedContent">
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white; " href="/">Live</a></li>
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white; " href="/">Casino</a></li>
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white; " href="/">Sports</a></li>
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white; " href="/">Esports</a></li>
                </ul>
                <ul class="nav navbar-nav ml-auto mr-lg-5">
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white;" href="/">My Wallet</a></li>
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white;" href="/">My Bets</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white;">
                            Account
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Profile">Profile</a>
                            <a class="dropdown-item" href="#">Settings</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Logout">Log out</a>
                        </div>
                    </li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white; " href="/">Live</a></li>
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white; " href="/">Casino</a></li>
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white; " href="/">Sports</a></li>
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/")" style="color: white; " href="/">Esports</a></li>
                </ul>
                <ul class="nav navbar-nav ml-auto mr-lg-5">
                    <li class="nav-item"><a class="nav-link @IsCurrentPage("/Login")" style="color: white; " href="/Login">Sign In</a></li>
                </ul>
            }

        </div>

    </nav>
    @RenderBody()

    <!-- Footer -->
    <footer class="page-footer bg-dark">

        <!-- Copyright -->
        <div class="footer-copyright text-center text-light py-3">
            © 2020 Skybet          
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
