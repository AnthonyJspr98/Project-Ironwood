@model HomePageVM
@{
    ViewData["Title"] = "Home Page";
}

    <div class="container">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img/carousel/aa.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/carousel/bb.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/carousel/cc.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div>
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <div class="container bg-secondary text-light">
                        <h5>Incoming Matches</h5>
                    </div>
                    <a class="nav-item nav-link active" id="nav-dota-tab" data-toggle="tab" href="#nav-dota" role="tab" aria-controls="nav-dota" aria-selected="false">Dota 2</a>
                    <a class="nav-item nav-link " id="nav-football-tab" data-toggle="tab" href="#nav-football" role="tab" aria-controls="nav-football" aria-selected="true">Football</a>
                    <a class="nav-item nav-link" id="nav-basketball-tab" data-toggle="tab" href="#nav-basketball" role="tab" aria-controls="nav-basketball" aria-selected="false">Basketball</a>
                    <a class="nav-item nav-link" id="nav-volleyball-tab" data-toggle="tab" href="#nav-volleyball" role="tab" aria-controls="nav-volleyball" aria-selected="false">Volleyball</a>
                    <a class="nav-item nav-link" id="nav-csgo-tab" data-toggle="tab" href="#nav-csgo" role="tab" aria-controls="nav-csgo" aria-selected="false">CS:GO</a>
                </div>
            </nav>
        </div>


        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-dota" role="tabpanel" aria-labelledby="nav-dota-tab">
              @if (Model.IncomingDotaMatches != null)
              {
                   @foreach (var item in Model.IncomingDotaMatches)
               {
                <div class="container py-1" style="background-color: black">
                    <div class="row justify-content-end py-1 bg-dark border border-dark rounded ">
                        <div class="col-3 text-light">
                            @item.Tournament.Name
                        </div>
                        @foreach (var items in item.MatchTeamDetails)
                        {
                            <div class="col-3 text-light bg-secondary border border-dark rounded-left">
                                @items.Team.Name
                            </div>
                        }
                        <div class="col-3 text-light">
                            @item.MatchDateandTime.ToLongDateString()
                        </div>
                    </div>
                </div>       
               }
              }
              else
              {
                  <div>No Data</div>
              }

              
            </div>
            <div class="tab-pane fade" id="nav-football" role="tabpanel" aria-labelledby="nav-football-tab">Football</div>
            <div class="tab-pane fade" id="nav-basketball" role="tabpanel" aria-labelledby="nav-basketball-tab">Basketball</div>
            <div class="tab-pane fade" id="nav-volleyball" role="tabpanel" aria-labelledby="nav-volleyball-tab">Volleyball</div>          
            <div class="tab-pane fade" id="nav-csgo" role="tabpanel" aria-labelledby="nav-csgo-tab">CSGO</div>
        </div>



        <div class="card-group">
            <div class="card">
                <img class="card-img-top" src="~/img/games/aaa.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Poker</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
            <div class="card">
                <img class="card-img-top" src="~/img/games/bb.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Dice</h5>
                    <p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
            <div class="card">
                <img class="card-img-top" src="~/img/games/cc.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Roullete</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This card has even longer content than the first to show that equal height action.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>

