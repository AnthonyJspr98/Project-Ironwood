@model LoginVM

@{
    ViewData["Title"] = "Login";
}

@section Scripts{ 
    <script type="text/javascript">

        function OnSuccess(data) {
            window.location = "/";
        }

    </script>
    <partial name="_ValidationScriptsPartial" />
}

<div class="main-content">
    <div class="container">
        <div class="row pt-2 ">
            <div class="col-sm-12 col-md-6 mx-auto col-lg-5 col-xl-4 offset-md-6 offset-lg-0">
                <div class="my-auto pt-5 pb-3">
                    <img src="~/img/logo/skybetlogo.png" class="rounded mx-auto d-block" alt="Alternate Text" style="height: 100px;" />
                </div>
                <form asp-action="Authenticate" asp-controller="Security" data-ajax-success="OnSuccess" class="mt-3 mb-3 ">
                    <div class="form-group">
                        <label asp-for="Username">Email</label>
                        <input asp-for="Username" class="form-control" aria-describedby="emailHelp" placeholder="Username/Email *" required="">
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password*" required="">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label">Remember me</label>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-outline-primary mt-3 form-control">LOGIN</button>
                    </div>

                    <div class="row justify-content-between">
                        <a href="#" class="col-6 text-center">Forgot Password</a>
                        <a href="/Register" class="col-6 text-center">Register</a>
                    </div>
                </form>
            </div>

        </div>
    </div>

</div>
    

