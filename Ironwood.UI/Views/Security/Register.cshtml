@using Ironwood.Application.Users.Commands
@model RegisterCommand

@{
    ViewData["Title"] = "Register";

}


@section Scripts {
    <script type="text/javascript">
        function OnSuccess(e) {
            window.location = "/";
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}

<div class="main-content">
    <div class="container">
        <div class="row pt-2">
            <div class="col-sm-12 col-md-6 mx-auto col-lg-5 col-xl-4 offset-md-6 offset-lg-0">
                <div class="my-auto pt-5 pb-3 text-center">
                    <img src="~/img/logo/skybetlogo.png" class="rounded mx-auto d-block" alt="Alternate Text" style="height: 100px;" />
                </div>
                <form asp-action="CreateAccount"
                      asp-controller="Security"
                      data-ajax-success="OnSuccess"
                      class="mt-3 mb-3 register-form">
                    <div class="form-group register-form-group"><input asp-for="FirstName" class="form-control register-form-control-plain-bg" type="text" placeholder="First Name *" autofocus=""></div>
                    <div class="form-group register-form-group"><input asp-for="MiddleName" class="form-control register-form-control-plain-bg" type="text" placeholder="Middle Name" autofocus=""></div>
                    <div class="form-group register-form-group"><input asp-for="LastName" class="form-control register-form-control-plain-bg" type="text" placeholder="Last Name *"></div>
                    <div class="form-group register-form-group"><input asp-for="EmailAddress" class="form-control register-form-control-plain-bg" type="email" placeholder="Email *"></div>
                    @*<div class="form-group register-form-group"><input asp-for="DateOfBirth" class="form-control register-form-control-plain-bg"></div>
                    <div class="form-group register-form-group">
                        <select asp-for="Gender" class="form-control" required>
                            <option value="1">Male</option>
                            <option value="2">Female</option>
                        </select>
                    </div>*@
                    <div class="form-group register-form-group">
                        <div class="form-row">
                            <div class="col"><input asp-for="Password" class="form-control register-form-control-plain-bg" type="password" placeholder="Password *"></div>
                            <div class="col"><input asp-for="ConfirmPassword" class="form-control register-form-control-plain-bg" type="password" placeholder="Confirm Password *"></div>
                        </div>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">I agree to all <a href="#">Terms &amp; Conditions</a> &amp; <a href="#">Privacy Policy</a>  </label>
                    </div>
                    <div class="form-group text-center register-form-group"><button class="btn btn-outline-primary mt-3 form-control" type="submit">SUBMIT</button></div>
                    <div class="form-group text-center">
                        <label>Already have an account? <a href="/Login">Sign in</a></label>
                    </div>

                </form>

            </div>

        </div>
    </div>
</div>
    

