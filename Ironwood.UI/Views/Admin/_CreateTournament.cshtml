@using Ironwood.Application.Tournaments.Commands
@model RegisterTournamentCommand

<form asp-action="CreateTournament" asp-controller="Admin" data-ajax-success="OnSuccess">
    <div class="text-center">
        <h4>Create Tournament</h4>
    </div>
    <div class="form-group">
        <label asp-for="TournamentName">Tournament Name</label>
        <input asp-for="TournamentName"  class="form-control" placeholder="Tournament Name *" required="">
    </div>   
    <div class="form-group text-center">
        <button class="btn btn-outline-primary mt-3 form-control" type="submit">SUBMIT</button>
    </div>
</form>
