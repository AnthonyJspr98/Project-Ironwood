@model MatchesVM
@{
    ViewData["Title"] = "Index";
}


    <div class="main-content">
        <div class="container-fluid">
            <div class="row">
                <h2>Matches</h2>
            </div>
            <div class="row">                
                <div class="nav col-2 flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#nav-dota" role="tab" aria-controls="v-pills-home" aria-selected="true">Dota 2</a>
                    <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">CS:GO</a>
                    <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">LoL</a>
                    <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Football</a>
                </div>
                <div class="tab-content col-10">
                     <div class="tab-pane fade show active" id="nav-dota" role="tabpanel" aria-labelledby="nav-dota-tab">
               @foreach (var item in Model.DotaMatches)
               {
                <div class="container py-1" style="background-color: black">
                    <div class="row justify-content-end py-1 bg-dark border border-dark rounded" style="height:75px;">
                        <div class="col-3 text-light">
                            @item.Tournament.Name
                        </div>
                        @foreach (var items in item.MatchTeamDetails)
                        {
                            <div class="col-3 text-light bg-secondary border border-dark rounded-left">
                                @items.Team.Name
                            </div>
                        }
                        <div class="col-3 text-light">
                            @item.MatchDateandTime.ToLongDateString()
                        </div>
                    </div>
                </div>       
               }
            </div>
                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">...</div>
                    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">...</div>
                    <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">...</div>
                </div>
            </div>
        </div>
    </div>

